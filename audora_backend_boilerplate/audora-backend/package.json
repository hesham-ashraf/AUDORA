{
  "name": "audora-backend",
  "version": "1.0.0",
  "description": "Backend for AUDORA web app (Phase 2)",
  "main": "src/index.js",
  "scripts": {
    "dev": "nodemon src/index.js",
    "start": "node src/index.js",
    "prisma": "prisma",
    "seed": "node prisma/seed.js",
    "test": "jest --runInBand",
    "test:watch": "jest --watch --runInBand"
  },
  "type": "module",
  "dependencies": {
    "express": "^4.18.2",
    "prisma": "^5.0.0",
    "@prisma/client": "^5.0.0",
    "cors": "^2.8.5",
    "dotenv": "^16.0.3",
    "cloudinary": "^1.41.3",
    "multer": "^1.4.5-lts.1",
    "jsonwebtoken": "^9.0.1",
    "bcryptjs": "^2.4.3"
  },
  "devDependencies": {
    "nodemon": "^2.0.22",
    "jest": "^29.7.0",
    "supertest": "^6.3.3",
    "@babel/preset-env": "^7.23.5"
  },
  "jest": {
    "transform": {
      "^.+\\.jsx?$": "babel-jest"
    },
    "testEnvironment": "node",
    "testMatch": ["**/__tests__/**/*.js", "**/?(*.)+(spec|test).js"],
    "moduleFileExtensions": ["js", "json", "node"]
  }
}